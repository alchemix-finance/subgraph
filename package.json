{
  "name": "@alchemix/subgraph",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky install",
    "format": "yarn lint --write",
    "codegen": "graph codegen subgraph.js --output-dir subgraph/generated --skip-migrations",
    "build": "graph build subgraph.js --skip-migrations",
    "predeploy": "graph create alchemix/alchemix --node http://127.0.0.1:8020 || true",
    "deploy": "graph deploy alchemix/alchemix subgraph.js --ipfs http://localhost:5001 --node http://127.0.0.1:8020/",
    "lint": "prettier --ignore-path .gitignore --list-different \"**/*.{ts,js,json,yaml}\"",
    "script": "ts-node scripts"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.26.0",
    "@graphprotocol/graph-ts": "^0.24.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.10",
    "@types/yargs": "^17.0.8",
    "ethers": "^5.5.3",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.2",
    "is-ci": "^3.0.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.2.2",
    "prettier": "^2.3.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "yargs": "^17.3.1"
  },
  "lint-staged": {
    "*.{ts,js,json,yaml}": "prettier --write"
  }
}
